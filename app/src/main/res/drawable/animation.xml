<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Animation frames are Fotball.png through Padel.png
         files inside the res/drawable/ folder -->
    <animation-list android:id="@+id/selected" android:oneshot="false">
        <item android:drawable="@drawable/Fotball" android:duration="50" />
        <item android:drawable="@drawable/Basket" android:duration="50" />
        <item android:drawable="@drawable/Padel" android:duration="50" />
    </animation-list>
</selector>